<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/black"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мағыналы сөздер"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_edit"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"/>

            <ImageButton
                android:id="@+id/imageBtnEdit"
                android:layout_width="70sp"
                android:layout_height="65sp"
                android:src="@android:drawable/ic_menu_add"
                android:background="@color/teal_700"
                />


        </LinearLayout>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сохранить"
                android:src="@android:drawable/ic_menu_add"
                android:background="@color/teal_700"
                android:layout_margin="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Автобиография "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/autobiography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="напишите о себе"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edit_round"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/autobiodraphy_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сохранить"
                android:src="@android:drawable/ic_menu_add"
                android:background="@color/teal_700"
                android:layout_margin="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Изменить пароль"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/password_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="старый пароль"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edit_round"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/password_new_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="новый пароль"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edit_round"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/password_new_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="напишите новый пароль еще раз"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edit_round"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/password_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сохранить"
                android:src="@android:drawable/ic_menu_add"
                android:background="@color/teal_700"
                android:layout_margin="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Изменить имя"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/new_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Напишите новый имя"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edit_round"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/save_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сохранить"
                android:src="@android:drawable/ic_menu_add"
                android:background="@color/teal_700"
                android:layout_margin="30dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>